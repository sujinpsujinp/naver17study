	public static int getMenu()
	{
		int menu=0;
		Scanner sc=new Scanner(System.in);
		System.out.println("1.멤버추가 2.전체출력 3.전체멤버삭제 4.종료");
		try {
			menu=Integer.parseInt(sc.nextLine());
		}catch(NumberFormatException e) {
			menu=2;//메뉴에 문자가 들어올 경우 그냥 전체 출력을 하자
		}
		return menu;
	}
	
	
	
